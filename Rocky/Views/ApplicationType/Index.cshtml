@model IEnumerable<Rocky.Models.ApplicationType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New ApplicationType
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Application Type Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>                        
                        <td class="text-center mx-2">
                            <div class="w-70 btn-group" role="group">
                                <a asp-controller="ApplicationType" asp-route-Id="@obj.ApplicationTypeId" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i> &nbsp; Edit
                                </a>
                                <a asp-controller="ApplicationType" asp-route-Id="@obj.ApplicationTypeId" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i> &nbsp; Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No ApplicationType exists.</p>
    }

</div>

