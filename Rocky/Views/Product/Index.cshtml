@model IEnumerable<Rocky_Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>

                    <th>
                        Category
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Price</td>                       
                        <td>@obj.Category.Name</td>
                        <td class="text-center">
                            <div class="w-90 btn-group" role="group">
                                <a asp-controller="Product" asp-route-Id="@obj.ProductId" asp-action="Upsert" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i> &nbsp; Edit
                                </a>
                                <a asp-controller="Product" asp-route-Id="@obj.ProductId" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i> &nbsp; Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Product exists.</p>
    }

</div>



